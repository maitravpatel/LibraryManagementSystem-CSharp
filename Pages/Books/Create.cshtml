@page
@model LibraryManagementSystem.Pages.Books.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2 style=" text-align: left">Add</h2>

<h4 style=" text-align: left">Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Book.Name" class="control-label"></label>
                <input asp-for="Book.Name" class="form-control" />
                <span asp-validation-for="Book.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Author" class="control-label"></label>
                <input asp-for="Book.Author" class="form-control" />
                <span asp-validation-for="Book.Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.FirstPublicationYear" class="control-label"></label>
                <input asp-for="Book.FirstPublicationYear" class="form-control" />
                <span asp-validation-for="Book.FirstPublicationYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Price" class="control-label"></label>
                <input asp-for="Book.Price" class="form-control" />
                <span asp-validation-for="Book.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.NoOfPublications" class="control-label"></label>
                <input asp-for="Book.NoOfPublications" class="form-control" />
                <span asp-validation-for="Book.NoOfPublications" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div style=" text-align: left">
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
